<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sama.useradmin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".MyApplication"
        android:theme="@style/AppTheme">

        <activity android:name=".presentation.splash.SplashActivity"
            android:theme="@style/AppTheme.Launcher"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.sama.useradmin.presentation.home.HomeActivity"
            android:launchMode="singleTask"
            />

        <activity android:name=".presentation.signup.SignUpActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden"
            android:launchMode="singleTask"
            />

        <activity android:name=".presentation.login.LoginActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden"
            />
    </application>

</manifest>